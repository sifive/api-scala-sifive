#!/usr/bin/env python3

import sys

if sys.version_info[0] < 3 or sys.version_info[1] < 5:
    print("This program requires Python version 3.5 or newer")
    sys.exit(1)

import os
import argparse
from lib import scalaplugin
from lib import common
from lib import logger

def get_parser():
    parser = argparse.ArgumentParser(formatter_class=argparse.RawTextHelpFormatter,
                                     description='Fetch Mill')
    parser.add_argument('directory', help='directory in which to install Mill',
                        type=common.is_existing_dir)

    logger.add_verbosity_arg(parser)
    return parser

if __name__ == '__main__':
    parser = get_parser()
    args = parser.parse_args()
    scalaplugin.install_mill(args.directory)
